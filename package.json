{
  "name": "@zyjared/buildpage",
  "type": "commonjs",
  "version": "0.0.0",
  "packageManager": "pnpm@9.4.0",
  "author": "Jared Zhang <zyjared@outlook.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zyjared/site"
  },
  "main": "./build/index.js",
  "module": "./build/index.js",
  "types": "./build/types/index.d.ts",
  "bin": {
    "buildpage": "build/scripts/gen.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "clean": "rimraf build index.html public/index.html",
    "lint": "eslint ./src/ ./scripts/",
    "lint:fix": "pnpm lint --fix",
    "build": "pnpm clean && pnpm lint && tsc && ts-node ./scripts/build.ts",
    "gen": "ts-node ./src/scripts/gen.ts",
    "test": "pnpm build && node ./build/scripts/gen.js",
    "patch": "npm version patch -m \"chore(release): %s\""
  },
  "dependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.6",
    "@types/markdown-it": "^14.1.1",
    "@types/node": "^20.14.9",
    "@unhead/schema": "^1.9.15",
    "@unhead/ssr": "^1.9.15",
    "autoprefixer": "^10.4.19",
    "cheerio": "1.0.0-rc.12",
    "commander": "^12.1.0",
    "cssnano": "^7.0.4",
    "fs-extra": "^11.2.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "markdown-it": "^14.1.0",
    "markdown-it-front-matter": "^0.2.4",
    "postcss": "^8.4.39",
    "unhead": "^1.9.15"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.21.2",
    "eslint": "^8.57.0",
    "rimraf": "^5.0.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  }
}
